  <!-- 材料定义 -->
  <material name="blue">
    <color rgba="0 0.5 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="silver">
    <color rgba="0.8 0.8 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
 
<link name="dummy_base">
  <inertial>
    <mass value="0.001" />
    <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
  </inertial>
</link>
 
<joint name="dummy_joint" type="fixed">
  <parent link="dummy_base" />
  <child link="base_link" />
</joint>
 
  <!-- 基座 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.165 0.083"/>  <!-- 长300mm 宽165mm 高103mm -->
      </geometry>
      <origin xyz="0 0 0.0415" rpy="0 0 0"/>  <!-- 中心位置 -->
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.165 0.083"/>
      </geometry>
      <origin xyz="0 0 0.0415" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>
 
